<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splash">

    <fragment
        android:id="@+id/register"
        android:name="ro.marc.chatapp.fragments.Register"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/register_to_login"
            app:destination="@id/login" />
        <action
            android:id="@+id/register_self"
            app:destination="@id/register" />
        <action
            android:id="@+id/action_register_to_main"
            app:destination="@id/main" />
    </fragment>
    <fragment
        android:id="@+id/splash"
        android:name="ro.marc.chatapp.fragments.Splash"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/splash_to_login"
            app:destination="@id/login" />
        <action
            android:id="@+id/splash_to_register"
            app:destination="@id/register" />
        <action
            android:id="@+id/action_splash_to_main"
            app:destination="@id/main" />
    </fragment>
    <fragment
        android:id="@+id/login"
        android:name="ro.marc.chatapp.fragments.Login"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/login_to_register"
            app:destination="@id/register" />
        <action
            android:id="@+id/action_login_to_main"
            app:destination="@id/main" />
    </fragment>
    <fragment
        android:id="@+id/main"
        android:name="ro.marc.chatapp.fragments.Main"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_main_to_login"
            app:destination="@id/login" />
    </fragment>
</navigation>